---
const {contacts} = Astro.props
---
		{contacts.map(({ id, name, email, phone}) => (
			<li id='row' class='flex justify-between px-2'>
    <div class='flex flex-col'>
      <span class='font-bold'>{name}</span>
      <span class='text-sm text-gray-300'>{email}</span>
      <span class='text-sm text-gray-300'>{phone}</span>
    </div>
    <div class='flex gap-3 self-center'>
      <a href={`/${id}`}>
        <i class='fa-solid fa-pen'></i>
      </a>
      <button
        hx-delete={`/${id}`}
        hx-push-url='true'
        hx-confirm='Are you sure you want to delete this contact?'
        hx-target='body'
      >
        <i class='fa-solid fa-trash'></i>
      </button>
    </div>
  </li>
		))}
